{
	"Chat Application Main Container CSS": {
        "prefix": "ld-gc-app-chat-container-styles",
        "body": [
            "#chat-container {",
            "\tmin-width: 800px;",
            "\tmax-width: 1000px;",
            "\tmax-height: 800px;",
            "\twidth: 100%;",
            "\theight: 95vh;",
            "\tbackground: #FFF;",
            "\tborder-radius: 10px;",
            "}"
        ]
    },

    "Chat Application Sections Basic CSS": {
        "prefix": "ld-gc-app-chat-sections-styles",
        "body": [
            "#search-container,",
            "#conversation-list,",
            "#new-message-container {",
            "\tbackground: #0048AA;",
            "}",
            "",
            "#search-container {",
            "\tborder-radius: 10px 0 0 0;",
            "\tbox-shadow: 0 1px 3px -1px rgba(0,0,0,0.75);",
            "\tz-index: 1;",
            "}",
            "",
            "#new-message-container {",
            "\tborder-top: 1px solid rgba(0,0,0,0.25);",
            "\tborder-radius: 0 0 0 10px;",
            "}",
            "",
            "#chat-title,",
            "#chat-form {",
            "\tbackground: #eee;",
            "}",
            "",
            "#chat-title {",
            "\tcolor: #0048AA;",
            "\tfont-weight: bold;",
            "\tfont-size: 2.0rem;",
            "\tborder-radius: 0 10px 0 0;",
            "\tbox-shadow: 0 1px 3px -1px rgba(0,0,0,0.75);",
            "}",
            "",
            "#chat-form {",
            "\tborder-radius: 0 0 10px 0;",
            "\tborder-top: 1px solid rgba(0,0,0,0.25);",
            "}"
        ]
    },

    "Chat Application Search Conversation CSS": {
        "prefix": "ld-gc-app-chat-search-container-styles",
        "body": [
            "#search-container input {",
            "\tcolor: #eee;",
            "\toutline: none;",
            "\tfont-weight: bold;",
            "\tborder-radius: 2px;",
            "\theight: 30px;",
            "\tborder: 0;",
            "\tpadding-left: 48px;",
            "\tpadding-right: 20px;",
            "\tfont-size: 1.4rem;",
            "\tbackground: url('../images/search/search.svg') no-repeat rgba(255, 255, 255, 0.3);",
            "\tbackground-position: 15px center;",
            "\tbackground-size: 20px 20px;",
            "}",
            "",
            "#search-container input::placeholder {",
            "\tcolor: #ddd;",
            "\tfont-weight: bold;",
            "}"
        ]
    },

    "Chat Application New Conversation Section CSS": {
        "prefix": "ld-gc-app-chat-new-conversation-styles",
        "body": [
            "#new-message-container a {",
            "\tbackground: #eee;",
            "\tborder-radius: 100%;",
            "\tcolor: #002C88;",
            "\ttext-decoration: none;",
            "\tfont-size: 3.6rem;",
            "}"
        ]
    },

    "Chat Application Chat Title Styles": {
        "prefix": "ld-gc-app-chat-title-styles",
        "body": [
            "#chat-title > img {",
            "\tcursor: pointer;",
            "}"
        ]
    },

    "Chat Application Chat Form Styles": {
        "prefix": "ld-gc-app-chat-form-styles",
        "body": [
            "#chat-form input {",
            "\toutline: none;",
            "\tpadding: 15px;",
            "\tborder: 2px solid #ddd;",
            "\tcolor: #330;",
            "\tborder-radius: 6px;",
            "\tfont-size: 1.4rem;",
            "}"
        ]
    },

    "Chat Application Conversation Item Styles": {
        "prefix": "ld-gc-app-chat-conversation-styles",
        "body": [
            ".conversation {",
            "\tcolor: #ddd;",
            "\tfont-size: 1.3rem;",
            "\tborder-bottom: 1px solid #002C88;",
            "\tpadding: 20px 20px 20px 15px;",
            "}",
            "",
            ".conversation.active,",
            ".conversation:hover {",
            "\tbackground: #002C88;",
            "}",
            "",
            ".conversation:hover {",
            "\tcursor: pointer;",
            "}",
            "",
            ".conversation > img {",
            "\theight: 40px;",
            "\tborder-radius: 100%;",
            "}",
            "",
            ".title-text {",
            "\tfont-weight: bold;",
            "\tcolor: #eee;",
            "}",
            "",
            ".created-date {",
            "\tcolor: #ddd;",
            "\twhite-space: nowrap;",
            "\tfont-size: 1rem;",
            "}"
        ]
    },

    "Chat Application Webkit Scrollbar Fix": {
        "prefix": "ld-gc-app-chat-webkit-scrollbar-fix",
        "body": [
            "::-webkit-scrollbar {",
            "\tdisplay: none;",
            "}"
        ]
    },

    "Chat Application Message Styles": {
        "prefix": "ld-gc-app-chat-message-styles",
        "body": [
            ".message-row {",
            "\tmargin-bottom: 20px;",
            "}",
            "",
            ".message-time {",
            "\tfont-size: 1.3rem;",
            "\tcolor: #777;",
            "}",
            "",
            ".message-text {",
            "\tpadding: 9px 14px;",
            "\tfont-size: 1.6rem;",
            "\tmargin-bottom: 5px;",
            "}",
            "",
            ".you-message .message-text {",
            "\tbackground: #0048AA;",
            "\tcolor: #eee;",
            "\tborder: 1px solid #0048AA;",
            "\tborder-radius: 14px 14px 0 14px;",
            "}",
            "",
            ".other-message .message-text {",
            "\tbackground: #eee;",
            "\tcolor: #111;",
            "\tborder: 1px solid #ddd;",
            "\tborder-radius: 14px 14px 14px 0;",
            "}"
        ]
    },

    "Chat Application Message Thumbnail Styles": {
        "prefix": "ld-gc-app-chat-message-thumbnail-styles",
        "body": [
            ".message-row img {",
            "\tborder-radius: 100%;",
            "}"
        ]
    }
}